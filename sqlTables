CREATE TABLE passenger (
    userID int AUTO_INCREMENT,
    name varchar(50),
    email varchar(50),
    password varchar(255),
    address varchar(255),
    phoneNumber varchar(20),
    creditCard varchar(100),
    Primary Key(userID)
);

CREATE TABLE flight(
    airlineID int AUTO_INCREMENT,
    airlineName varchar(20),
    airlineType varchar(20),
    source varchar(20),
    destination varchar(20),
    departureTime datetime,
    arrivalTime datetime,
    businessSeatsAvailble int,
    businessPrice decimal,
    economySeatsAvailable int,
    enonomyPrice decimal,
    Primary Key(airlineID)
);

CREATE TABLE ticket (
    ticketID int AUTO_INCREMENT,
    airlineID int,
    userID int,
    totalPrice decimal,
    Primary Key(ticketID),
    Foreign Key(userID) references passenger(userID) ON UPDATE CASCADE ON DELETE CASCADE,
    Foreign Key(airlineID) references flight(airlineID) ON UPDATE CASCADE ON DELETE CASCADE
);

CREATE TABLE admin (
    adminID int AUTO_INCREMENT,
    email varchar(50),
    password varchar(255),
    Primary Key(adminID)
);

